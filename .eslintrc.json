{
  "env": {
    "es6": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "globals": {
    "expect": true
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "space-before-function-paren": 0,
    "react/jsx-boolean-value": 0,
    "import/first": 0
  }
}
